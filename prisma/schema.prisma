generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @map("_id") @db.ObjectId @default(auto())
  email String @unique
  name String
  password String
  isMedicado Boolean @default(false)
  isAuxiliar Boolean @default(false)
  linkedId String?
}

model Reminder {
  id String @id @map("_id") @db.ObjectId @default(auto())
  userId String
  name String
  dosage String
  desc String?
  hour String
  callAlexa Boolean @default(false)
}

model History {
  id String @id @map("_id") @db.ObjectId @default(auto())
  userId String
  name String
  reminderId String
  hour String
  taken Boolean?
}
